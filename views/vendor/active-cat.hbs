{{!-- SHOW ALL CATEGORY LIST STARTS--}}
<div class="dash-container  mt-5 p-4">
  <h4 class="text-center mb-5">Active Categories</h4>
  <section>

    <div class="container shadow p-2">

      <table class="table display" id="vendors_table">
        <thead>
          <tr>

            <th scope="col">index</th>
            <th scope="col">category</th>
            {{!-- <th scope="col">Edit</th> --}}
            <th scope="col">Block</th>


          </tr>
        </thead>
        <tbody>
          {{#each data}}
          <tr>

            <td>{{inc @index}}</td>
            <td> {{this.name}}</td>

            {{!-- <td>

              <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal{{this._id}}">
                Edit
              </button>
            </td>
            <td> --}}
            <td>
              <a href="/vendor/block-cat/{{this._id}}" class="btn btn-danger"
                onclick="return confirm('are you  to  {{this.name}}')">Block</a>
            </td>

          </tr>
          <div class="modal fade" id="exampleModal{{this._id}}" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">

                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <form action="/vendor/edit-cat/{{this._id}}" method="post">
                    <div class="content-wrappers text-center mt-2">
                      <label for="" class="mt-2 ADDCATEGORIES_LABLE">ADD CATEGORIES</label><br>

                      <input required type="text" value="{{this.name}}" class="mt-2 text-2 text-uppercase" name="name">


                      <button type="submit" class="btn btn-primary ">Save changes</button>
                    </div>


                  </form>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                </div>
              </div>
            </div>
          </div>

          {{/each}}

        </tbody>
      </table>
    </div>
  </section>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
  <script src="sweetalert2/dist/sweetalert2.all.min.js"></script>
  <!-- Include a polyfill for ES6 Promises (optional) for IE11 -->
  <script src="https://cdn.jsdelivr.net/npm/promise-polyfill@8/dist/polyfill.js"></script>

  {{#if categoryexists}}

  <script>
    flash()
    function flash() {
      Swal.fire({
        icon: 'error',
        title: 'Oops...',
        text: 'Category already exists or blocked by admin',
      })
    }

  </script>

  {{/if}}

  <script>
    $(document).ready(function () {


      $('#user_table').wrap('<div id="hide" style="display:none"/>');

      $('#hide').css('display', 'block');
    });


    var table = $('#vendors_table').DataTable();
  </script>

</div>
{{!-- SHOW ALL CATEGORY LIST ends--}}