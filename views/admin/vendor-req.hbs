        <a href="/admin/hold-ven/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you sure to unblock {{this.name}}')">Hold</a></td>
      <td>
        <a href="/admin/admit-ven/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you sure to unblock {{this.name}}')">Admit</a></td>

      


    {{/each}}
   
  </tbody>
</table>
   </div>
</section>
