                <h4 class="text-center mb-5">New VendorRequest</h4>

<section >

   <div class="container  shadow p-2">
      
        <table class="table display" id="reqCat_table" >
  <thead>
    <tr>
      
      <th scope="col">index</th>
      <th scope="col">name</th>
      <th scope="col">email</th>
      <th scope="col">number</th>
      <th scope="col">Hold</th>
      <th scope="col">Admit</th>

      
    </tr>
  </thead>
  <tbody>
      {{#each vendors}}
